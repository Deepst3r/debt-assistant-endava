<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.fragment.AdviceFragment"
                                                   android:id="@+id/frameLayout">
    <TextView
            android:textSize="48sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.5"
            android:text="Advice" android:layout_marginTop="48dp" android:id="@+id/textView4"
            android:textColor="@color/colorPrimary"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            tools:text="You don't need help"
            android:layout_height="wrap_content"
            android:id="@+id/text_advice" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp" android:layout_marginRight="48dp"
            android:layout_marginLeft="48dp" android:layout_marginStart="48dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>